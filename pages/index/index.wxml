<view class="container" style="background:#ff0066">
  <view class="seach_content">
    <image src='../../images/3.png' style="height:180rpx;width:300rpx;"></image>
  </view>
  <view style='background:#fff;height:80rpx;border-radius:80rpx;margin-bottom:30rpx;width:90%;'>
    <input style="padding:0 30rpx;text-align:center;margin-top:14rpx;color:#666;" type="text" readonly="readonly" placeholder="妆口袋 开启美一天" />
  </view>
  <view style='width:100%;background:#fff;'>
    <view style='width:25%;height:84rpx;float:left;'>
      <image src='../../images/秒杀.png' style="width:48rpx;height:48rpx;padding:30rpx 66rpx;"></image>
    </view>
    <view style='width:25%;height:84rpx;float:left;'>
      <image src='../../images/拼图.png' style="width:50rpx;height:50rpx;padding:30rpx 66rpx;"></image>
    </view>
    <view style='width:25%;height:84rpx;float:left;'>
      <image src='../../images/order-red.png' style="width:48rpx;height:48rpx;padding:30rpx 66rpx;"></image>
    </view>
    <view style='width:25%;height:84rpx;float:left;'>
      <image src='../../images/分类.png' style="width:48rpx;height:48rpx;padding:30rpx 66rpx;"></image>
    </view>
  </view>
  <view style='width:100%;background:#fff;height:60rpx;'>
    <view style="width:25%;height:20rpx;float:left;text-align:center;color:#666">
      抢购
    </view>
    <view style="width:25%;height:20rpx;float:left;text-align:center;color:#666">
      拼团
    </view>
    <view style="width:25%;height:20rpx;float:left;text-align:center;color:#666">
      订单
    </view>
    <view style="width:25%;height:20rpx;float:left;text-align:center;color:#666">
      分类
    </view>
  </view>
  <scroll-view scroll-y="true" style='height:600px;' lower-threshold="5" bindscrolltolower='pullUp' style='background:#fff;'>
    <view class='pick_list'>
      <view wx:for="{{goodList}}" wx:key="unique" class='pick_item'>
        <view style="padding:0 30rpx;" bindtap="goodInfo">
          <navigator url="/pages/good/good?goodId={{item.id}}" hover-class="navigator-hover" style='height:220px'>
            <image style="width: 100%; height: 220px; background-color: #eeeeee;" src="{{item.mainImgUrl}}"></image>
          </navigator>
        </view>
        <view class="zan-cell">
          <view class="zan-cell__bd">
            <view class="zan-ellipsis" style="width: 300px;font-size:16px;font-weight:700;">
              {{item.goodName}}
            </view>
          </view>
        </view>
        <view style="margin-top:10px;padding:0 50rpx">
          <view class="zan-c-gray" style="float:left;">来自: 小米科技有限公司</view>
          <view class="zan-c-gray"> | {{item.saleVolume}} 人购买</view>
        </view>
      </view>
    </view>
  </scroll-view>
</view>