/* pages/ticket/ticket.wxss */

page{
    background: #eef0fd;
}

.ticket_container {
  padding-top: 10rpx;
}

.ticket_btn_view_normal {
  width: 335rpx;
  background: white;
  padding: 10rpx;
  font-size: 28rpx;
  color: #9a5afa;
}

.ticket_btn_view_select {
  width: 335rpx;
  background: #9a5afa;
  padding: 10rpx;
  font-size: 28rpx;
  color: white;
}

.ticket_label_white {
  font-size: 28rpx;
  color: white;
}

.ticket_label_violet {
  font-size: 28rpx;
  color: #9a5afa;
}

.ticket_item {
  width: 100%;
  height: auto;
}

/*卡券内容*/

.ticket_content {
  display: inline-flex;
  text-align: center;
  padding: 20rpx;
  height: 180rpx;
  /* border-radius: 16rpx; */
}

.ticket_content_left {
  width: 60rpx;
  background: #9a5afa;
}

.ticket_content_middle {
  background: white;
  width: 460rpx;
  display: list-item;
  padding: 10rpx 20rpx;
  list-style: none;
}

.ticket_content_right {
  width: 150rpx;
  background: #9a5afa;
  padding-top: 60rpx;
}

.content_lf {
  width: 30%;
  line-height: 150rpx;
  text-align: center;
}

.content_lf .money {
  /* font-size: 72rpx; */
  font-size-adjust: 30px;
}

.content_rg {
  float: right;
  width: 65%;
  text-align: left;
}

.content_rg .least_money {
  /* font-size: 40rpx; */
  font-size-adjust: 20px;
  margin: 20rpx;
  /* margin-bottom: 12rpx; */
}

.content_rg .use_range {
  font-size: 22rpx;
}

/*卡券底部*/

.ticket_footer {
  border-left: 1px solid #e14424;
  border-right: 1px solid #e14424;
  background: #e14424;
  height: 70rpx;
  color: #fff;
  font-size: 28rpx;
  padding: 0 15rpx;
  line-height: 70rpx;
  border-bottom-left-radius: 14rpx;
  border-bottom-right-radius: 14rpx;
}

.footer_lf, .footer_rg, .content_lf, .content_rg {
  display: inline-block;
  height: 100%;
}

.footer_lf {
  width: 30%;
  text-align: left;
}

.footer_rg {
  width: 60%;
  float: right;
  font-size: 24rpx;
  text-align: right;
}
