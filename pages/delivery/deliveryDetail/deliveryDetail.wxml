<!--收货地址选择-->
<view class="form">
  <form bindsubmit="formSubmit" bindreset="formReset">
      <view class='form_item' style='border-top:1px solid #f1f1f1;'>
        <span class='tit'>收货人</span>
        <view class='ipt'>
        <input placeholder='请填写收货人' bindblur="getData" data-name='name'>{{name?name:addressList.recipients}}</input>
        </view>
      </view>
      <view class='form_item'>
        <span class='tit'>联系电话</span>
        <view class='ipt'>
        <input placeholder='手机或固定电话' bindblur='getData' data-name='phone'>{{phone?phone:addressList.phone}}</input>
        </view>
      </view>
      <view class='form_item'>
        <span class='tit '>收货地区</span>
        <view class='area '>
            <picker  bindchange="getDataPick" id='province' data-name='{{cityList}}' value="{{index}}" range="{{cityList}}">
              <view class="val">
                {{cityList[indexPro]}}
              </view>
            </picker>
        </view>
         <view class='area'>
            <picker bindchange="getDataPick" id='city' data-name='{{cityList}}' value="{{index}}" 
            range="{{cityList}}">
              <view class="picker">
                {{cityList[indexCity]}}
              </view>
            </picker>
        </view>
         <view class='area'>
            <picker bindchange="getDataPick" id='countryside' data-name='{{csideList}}' value="{{index}}"
            range="{{csideList}}">
              <view class="picker">
                {{csideList[indexCount]}}
              </view>
            </picker>
        </view>
      </view>
        <view class='form_item'>
        <span class='tit'>详细地址</span>
        <view class='ipt'>
        <input placeholder='街道门牌信息' bindblur='getData' data-name='address'>{{address?address:addressList.address}}</input>
        </view>
       </view>
         <view class='form_item'>
        <span class='tit'>邮政编码</span>
        <view class='ipt'>
        <input placeholder='邮政编码（选填）' bindblur='getData' data-name='code'>{{code?code:addressList.postCode}}</input>
        </view>
      </view>  
      <button type="primary" bindtap="primary" class='btn zan-btn--large' bindtap='submit'> 保存 </button>
      <button type="default" bindtap="primary" class='btn zan-btn--large' bindtap='del' wx:if='{{delFlag}}'> 删除收获地址</button>
  </form>
</view>