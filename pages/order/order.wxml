    <view class="zan-panel" wx:for="{{goods}}" wx:for-item="item">
      <view class='zan-card'>
        <view class='zan-card__detail-row zan-c-gray-darker'>
          <view class="zan-card__right-col zan-c-red">等待买家付款</view>
